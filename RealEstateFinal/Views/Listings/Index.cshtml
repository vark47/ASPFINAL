@model IEnumerable<RealEstateFinal.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

@foreach (var item in Model)
{

    <div class="card" style="width:75%">
        <img class="card-img-top" style="width:75%" src="@Html.DisplayFor(modelItem => item.ImgURL)" alt="Image of house">
        <div class="card-body">
            <h1 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h1>
        </div>
        <ul class="list-group list-group-flush">

            <li class="list-group-item"> @Html.DisplayFor(modelItem => item.Body)</li>
            <li class="list-group-item">@Html.DisplayFor(modelItem => item.Rent)</li>
        </ul>
        <div class="card-body">
            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning active">Edit Listing</a>
            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger active">Delete Listing</a>
        </div>
        <br />
        <br />
    </div>
}

    <p>
        <a asp-action="Create" class="btn btn-danger success">New Listing</a>
    </p>